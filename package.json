{
    "name": "0x-microservice-template",
    "version": "1.0.0",
    "author": "xianny",
    "description": "Data Service API",
    "main": "./lib/src/index.js",
    "license": "MIT",
    "engines": {
        "node": ">=15.14.0"
    },
    "scripts": {
        "build": "yarn docgen && yarn build:ts",
        "build:ts": "tsc -p tsconfig.json",
        "clean": "rm -rf lib",
        "clean:db": "rm -rf postgres hashalytics",
        "docgen": "swaggerGen -c ./swaggerConfig.json",
        "lint": "tslint --project . --format stylish && yarn prettier:ci",
        "fix": "tslint --project . --format stylish --fix && yarn prettier",
        "migrate": "npx typeorm migration:run --config ./lib/src/database/local/ormconfig.js",
        "prettier": "prettier --write ${npm_package_config_prettier_target} --config .prettierrc",
        "prettier:ci": "prettier --list-different ${npm_package_config_prettier_target} --config .prettierrc",
        "test": "DOTENV_CONFIG_PATH=.env.test mocha -r dotenv/config -r esm -r ts-node/register --env test test/**/*.test.ts",
        "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
        "start": "node lib/src/index.js --env=production",
        "start:dev": "nodemon --ignore src/docs/swagger.json --exec 'yarn docgen && ts-node -r dotenv/config' src/index.ts | pino-pretty"
    },
    "config": {
        "prettier_target": "{.,test/**,src/**}/*.{ts,tsx,json,md}"
    },
    "dependencies": {
        "@0x/api-utils": "0xProject/gitpkg-registry#0x-api-utils-v0.0.1-93bcb1a",
        "@0x/assert": "^3.0.23",
        "@0x/json-schemas": "^5.4.1",
        "@0x/types": "^3.3.1",
        "@0x/utils": "^5.6.3",
        "body-parser": "^1.19.0",
        "command-line-args": "^5.1.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "http-status-codes": "^2.1.4",
        "pg": "^8.5.1",
        "pino": "^6.7.0",
        "swagger-ui-express": "^4.1.6",
        "typeorm": "^0.2.29",
        "typeorm-naming-strategies": "^2.0.0",
        "typescript": "^4.0.3",
        "typescript-rest": "^3.0.2",
        "typescript-rest-swagger": "^1.1.6",
        "uuid-validate": "^0.0.3"
    },
    "devDependencies": {
        "@0x/tslint-config": "^4.1.3",
        "@types/command-line-args": "^5.0.0",
        "@types/express": "^4.17.8",
        "@types/mocha": "^8.0.3",
        "@types/pino": "^6.3.3",
        "@types/sinon": "^9.0.8",
        "@types/supertest": "^2.0.10",
        "@types/swagger-jsdoc": "^6.0.0",
        "@types/swagger-ui-express": "^4.1.2",
        "@types/uuid-validate": "^0.0.1",
        "chai": "^4.2.0",
        "chai-bignumber": "^3.0.0",
        "esm": "^3.2.25",
        "make-promises-safe": "^1.1.0",
        "mocha": "^6.2.0",
        "node-fetch": "^2.6.1",
        "nodemon": "^2.0.6",
        "pino-pretty": "^4.3.0",
        "prettier": "^2.1.2",
        "query-string": "^6.13.6",
        "sinon": "^9.2.0",
        "supertest": "^6.0.0",
        "ts-node": "^9.0.0"
    }
}
